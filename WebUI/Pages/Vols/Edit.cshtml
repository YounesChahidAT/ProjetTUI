@page
@model WebUI.Pages.Vol.EditModel
@{
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
	<div class="post d-flex flex-column-fluid">
		<div class="container-fluid">
		
			<div class="py-5">
				<div class="rounded border p-10 card ">
					<div class="tab-pane fade show active" id="kt_tab_pane_1" role="tabpanel">
						<!--begin::Row-->
						<div class="row g-5 g-xxl-8">
							<div class="d-flex flex-column-fluid">
								<!--begin::Container-->
								<div class="col-md-7 card card-custom">
									<div class="card-header">
										<h3 class="card-title">Nouveau Vol</h3>
									</div>
									<form class="form" method="post" enctype="multipart/form-data">
										<input type="hidden" asp-for="volVM.Id" />
										<div class="card-body">
											
											
											<div class="form-group mb-5">
												<label class="form-label" asp-for="volVM.Description"></label>
												<input type="text" asp-for="volVM.Description" class="form-control" />
												<span class="form-text text-danger" asp-validation-for="volVM.Description"></span>
											</div>

											<div class="form-group mb-5">
												<label class="form-label" asp-for="volVM.Pilote"></label>
												<input type="text" asp-for="volVM.Pilote" class="form-control" />
												<span class="form-text text-danger" asp-validation-for="volVM.Pilote"></span>
											</div>

											<div class="form-group mb-5">
												<label class="form-label" asp-for="volVM.NumAvion"></label>
												<input type="text" asp-for="volVM.NumAvion" class="form-control" />
												<span class="form-text text-danger" asp-validation-for="volVM.NumAvion"></span>
											</div>
											
										</div>

										<div class="card-footer text-right">
											<button type="button" class="btn btn-secondary" onclick="javascript : window.history.back();">Retour à la liste</button>
											<button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
										</div>
									</form>
								</div>
							</div>
						</div>
						<!--end::Row-->
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
@section linkScripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


